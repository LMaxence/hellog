{
  "extends": [
    "@tsconfig/esm/tsconfig",
    "@tsconfig/node18/tsconfig",
    "@tsconfig/strictest/tsconfig"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "lib": ["ESNext"],
    "module": "ES2022",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*"]
}
